<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="View.Controllers.AboutButtonController"
            prefWidth="650" prefHeight="400"
            style="-fx-background-image: url('/mainScreen.jpg');
                   -fx-background-size: stretch;
                   -fx-background-position: center;
                   -fx-background-repeat: no-repeat;">

    <center>
        <VBox alignment="CENTER" spacing="10"
              style="-fx-background-color: rgba(255,255,255,0.8); -fx-padding: 20; -fx-background-radius: 10;">

            <Label text="This application was developed by Lidor Maimon and Chen Birnfeld."
                   wrapText="true" textAlignment="CENTER"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #222;" />

            <Label text="The project explores JavaFX-based GUI design, multithreaded logic, and custom rendering for interactive user experiences."
                   wrapText="true" textAlignment="CENTER"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #222;" />

            <Label text="Good luck on your maze adventure!"
                   wrapText="true" textAlignment="CENTER"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #222;" />

            <Label text="&quot;If you believe in yourself and with a tiny pinch of magic, all your dreams can come true.&quot;"
                   wrapText="true" textAlignment="CENTER"
                   style="-fx-font-style: italic; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-font-size: 16;" />

            <Label text="â€” SpongeBob SquarePants"
                   wrapText="true" textAlignment="CENTER"
                   style="-fx-font-style: italic; -fx-text-fill: #444444; -fx-font-size: 14;" />
        </VBox>
    </center>

    <bottom>
        <Button text="Back to Menu"
                onAction="#onBackToMenuClicked"
                maxWidth="Infinity"
                BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
