<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Controllers.MazeSizePopupController"
      style="-fx-padding: 20;">

    <Label text="Enter Maze Size:" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Rows:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="rowsField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Columns:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="colsField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Generate" onAction="#generateButton"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
